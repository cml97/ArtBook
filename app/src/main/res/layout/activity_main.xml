<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backart"
    tools:context="com.example.cemilsoftware.project_artbook2.MainActivity"
    >


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/logo"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="300dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/title"
        android:layout_marginTop="48dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_list"

        android:layout_width="270dp"
        android:layout_height="60dp"

        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button_add"
        android:layout_marginBottom="55dp"
        android:background="@drawable/buttonshape"
        android:onClick="listArt"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Resimleri Listele"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_add"

        android:layout_width="270dp"
        android:layout_height="60dp"

        android:layout_above="@+id/button_list"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="@drawable/buttonshape"
        android:onClick="addArt"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Resim Ekle"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</RelativeLayout>
